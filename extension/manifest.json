{
  "manifest_version": 3,
  "name": "Site1 Table Scraper",
  "version": "1.1.0",
  "description": "Scrape Site1 results table after manual login and export JSON/CSV.",
  "permissions": ["activeTab", "scripting", "tabs", "downloads", "storage", "sidePanel"],
  "host_permissions": [
    "https://esm.gov.ae/*",
    "https://admin.sharyuae.ae/*",
    "http://localhost:8787/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Scrape Site1"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://esm.gov.ae/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
